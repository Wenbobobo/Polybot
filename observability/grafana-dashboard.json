{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Prometheus data source",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "9.0.0" },
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "9.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "2.0.0" }
  ],
  "title": "Polybot Overview",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "market",
        "datasource": "${DS_PROMETHEUS}",
        "refresh": 1,
        "query": "label_values(relayer_acks_accepted, market)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] }
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Relayer Acks Accepted",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum by (market) (increase(relayer_acks_accepted{market=~\"$market\"}[5m]))", "legendFormat": "{{market}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Relayer Acks Rejected",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum by (market) (increase(relayer_acks_rejected{market=~\"$market\"}[5m]))", "legendFormat": "{{market}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Relayer Place Errors",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum by (market) (increase(relayer_place_errors{market=~\"$market\"}[5m]))", "legendFormat": "{{market}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Engine Retries",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum by (market) (increase(engine_retries{market=~\"$market\"}[5m]))", "legendFormat": "{{market}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Ingestion Applied vs Resyncs",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 },
      "targets": [
        { "expr": "sum by (market) (increase(ingestion_msg_applied{market=~\"$market\"}[5m]))", "legendFormat": "applied {{market}}" },
        { "expr": "sum by (market) (increase(ingestion_resync_gap{market=~\"$market\"}[5m]) + increase(ingestion_resync_checksum{market=~\"$market\"}[5m]) + increase(ingestion_resync_first_delta{market=~\"$market\"}[5m]))", "legendFormat": "resyncs {{market}}" }
      ]
    }
  ]
}

